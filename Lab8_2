#include <iostream>

using namespace std;

int main()
{

    double a, b, c, max1, max2;
    cout << "Enter 3 numbers: ";
    cin >> a >> b >> c;

    if(b >= c){
        max1 = b;
        if(a >= c) max2 = a;
        else max2 = c;
    }
    else {
        max1 = c;
        if(a >= b) max2 = a;
            else max2 = b;
    }

    cout << "Sum of two biggest numbers: " << max1 + max2;

    return 0;
}
