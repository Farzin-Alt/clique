#include <iostream>
#include <cmath>
using namespace std;

int main() 
{
    double A;
    int N,m,n;
    cout<<"Enter A: "; cin>>A;
    cout<<"Enter N: "; cin>>N;
    m=1;
    if(N>0)
    {
        for (int i=1; i<=N; i++)
        {
            n=pow(-A,i);
            m+=n;
        }
        cout<<m;
    }
    else
    cout<<"Invalid values";
    return 0;
}
