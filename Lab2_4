#include <iostream>

using namespace std;

int main()
{
    double x1, y1, x2, y2;

    cout << "Enter coords: ";
    cin >> x1 >> y1 >> x2 >> y2;

    double a, b;
    a = (x1 - x2) < 0 ? -1*(x1 - x2) : (x1 - x2);
    b = (y1 - y2) < 0 ? -1*(y1 - y2) : (y1 - y2);

    cout << "P= " << 2*(a + b) << endl << "S= " << a*b;

    return 0;
}
